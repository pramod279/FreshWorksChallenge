<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gifImage"
            type="com.freshworks.challenge.data.entities.GifInfo" />

        <variable
            name="favourite"
            type="com.freshworks.challenge.ui.trending.adapters.GifImageAdapter.FavouritesClickListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/ivGif"
            loadImage="@{gifImage.images.fixed_height.url}"
            android:layout_width="@dimen/giphy_image_width"
            android:layout_height="@dimen/giphy_image_height"
            android:contentDescription="@string/desc_giphy"
            android:maxHeight="@dimen/giphy_max_height"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btnFavourites"
            toggleFavourites="@{gifImage.favourite}"
            android:layout_width="@dimen/fav_button_width"
            android:layout_height="@dimen/fav_button_height"
            android:layout_gravity="end"
            android:onClick="@{() -> favourite.onClick(gifImage)}"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/favourites" />
    </com.google.android.material.card.MaterialCardView>
</layout>