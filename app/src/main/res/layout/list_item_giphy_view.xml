<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="gifImage"
            type="com.freshworks.challenge.model.Data" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <ImageView
            android:id="@+id/ivGif"
            loadImage="@{gifImage.images.Downsized.url}"
            android:layout_width="@dimen/giphy_item_image_width"
            android:layout_height="@dimen/giphy_item_image_height"
            android:contentDescription="@string/desc_giphy"
            android:maxHeight="@dimen/giphy_item_max_height"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>
</layout>